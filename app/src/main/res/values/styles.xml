<resources>

    <style name="Widget.Theme.GOcery.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="household_cards.label">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="household_cards">
        <item name="cardCornerRadius">15dp</item>
<!--        <item name="android:backgroundTint">@color/light_gray</item>-->
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
<!--        <item name="android:padding">10dp</item>-->
    </style>

    <style name="household_cards.text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="household_cards.profile_pic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--  Expense tracker  -->
    <!-- Dialogs -->
    <style name="Dialog.Gocery.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_medium</item>
    </style>

    <style name="Dialog.Gocery.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Gocery.Button.Normal" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="Widget.Gocery.Button.Large" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="Widget.Gocery.TextButton.Normal" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="Widget.Gocery.TextButton.Large" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
</resources>